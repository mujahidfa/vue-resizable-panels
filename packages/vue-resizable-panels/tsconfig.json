{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "baseUrl": ".",
    "outDir": "dist/types",
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
